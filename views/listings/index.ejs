<% layout("/layouts/boilerplate") %>

    <body>
        
        <!-- <h3>All Listings</h3> -->
        <!-- <form method="get" action="/listings/new">
            <button>create new listing</button>
        </form> -->
        <style>
            .filters{
                display: flex;
                flex-wrap: wrap;
                justify-content: space-between;
            }

            .filter{
                text-align: center;
                margin-right: 2rem;
                opacity: 0.7;
                cursor: pointer;

            }

            .allFilters{
                display: flex;
                overflow: auto;
            }

            .filter:hover{
                opacity: 1;
            }

            .filter span{
                font-size: 0.8rem;
            }

            .tax-info{
                display: none;
            }

            .tax-toggle{
                border: 2px solid black;
                border-radius: 0.7rem;
                height: fit-content;
                padding: 10px;
            }
            
        </style>

        <div class="filters mt-4">
            <div class="allFilters">
                <div class="filter">
                    <div><i class="fa-solid fa-fire"></i></div>
                    <span>Trending</span>
                </div>
                <div class="filter">
                    <div><i class="fa-solid fa-bed"></i></div>
                    <span>Rooms</span>
                </div>
                <div class="filter">
                    <div><i class="fa-solid fa-mountain-city"></i></div>
                    <span>Iconic Cities</span>
                </div>
                <div class="filter">
                    <div><i class="fa-brands fa-fort-awesome"></i></div>
                    <span>Castels</span>
                </div>
                <div class="filter">
                    <div><i class="fa-solid fa-person-swimming"></i></div>
                    <span>Pools</span>
                </div>
                <div class="filter">
                    <div><i class="fa-solid fa-campground"></i></div>
                    <span>Camping</span>
                </div>
                <div class="filter">
                    <div><i class="fa-solid fa-cow"></i></div>
                    <span>Farms</span>
                </div>
                <div class="filter">
                    <div><i class="fa-solid fa-snowflake"></i></div>
                    <span>Arctic</span>
                </div>
            </div>

            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Display taxes</label>
                  </div>
            </div>
        </div>
            
        <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-4">
            <% for( listing of allListings) { %>
                <a href="/listings/<%= listing._id %>" class="listing-link">

                    <div class="card col listing-card">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_img" style="height: 17rem;">
                        <div class="card-img-overlay">
                            <%= listing.title %>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %>
                                </b>
                                <br>
                                &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                                <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                            </p>
                        </div>
                    </div>

                </a>
                <% } %>
        </div>



        <script>
            let taxSwitch = document.getElementById("flexSwitchCheckDefault");
            taxSwitch.addEventListener("click", () => {
                let taxInfo = document.getElementsByClassName("tax-info");
                for(info of taxInfo){
                    if(info.style.display != "inline"){
                        info.style.display = "inline";
                    }else{
                        info.style.display = "none";
                    }
                    
                }
            })
        </script>
    </body>

   